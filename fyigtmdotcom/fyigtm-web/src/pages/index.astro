---
import LandingLayout from '../layouts/LandingLayout.astro';
---

<LandingLayout title="FYI GTM | Go-to-Market Intelligence">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-container">
      <div class="hero-content">
        <h1 class="hero-title">Go-to-market intelligence</h1>
        <p class="hero-description">
          Curated tools, weekly analysis, and insights to help GTM teams grow faster.
        </p>

        <!-- Newsletter Subscribe -->
        <form class="hero-form" id="newsletter-form">
          <div class="form-row">
            <input
              type="email"
              placeholder="Enter your email"
              class="hero-input"
              id="newsletter-email"
              required
            />
            <button type="submit" class="hero-button" id="newsletter-submit">
              Subscribe
            </button>
          </div>
          <p class="newsletter-status" id="newsletter-status"></p>
        </form>
        <p class="hero-note">Weekly insights delivered to your inbox.</p>
      </div>

      <div class="hero-mascot">
        <img src="/logo.png" alt="FYI GTM Mascot" class="mascot-image" />
      </div>
    </div>
  </section>

  <!-- Explore Section -->
  <section class="explore">
    <div class="explore-container">
      <div class="cards-grid">
        <!-- Directory Card -->
        <a href="/directory" class="card">
          <div class="card-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="3" y="3" width="7" height="7" />
              <rect x="14" y="3" width="7" height="7" />
              <rect x="3" y="14" width="7" height="7" />
              <rect x="14" y="14" width="7" height="7" />
            </svg>
          </div>
          <h3 class="card-title">GTM Tools Directory</h3>
          <p class="card-description">
            Browse 200+ curated tools across sales, marketing, operations, and analytics.
          </p>
          <span class="card-link">
            Browse tools
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7" />
            </svg>
          </span>
        </a>

        <!-- Newsletter Card -->
        <a href="/newsletter" class="card">
          <div class="card-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="2" y="4" width="20" height="16" rx="2" />
              <path d="M22 7l-10 6L2 7" />
            </svg>
          </div>
          <h3 class="card-title">Weekly Newsletter</h3>
          <p class="card-description">
            Trends, new tools, and tactical insights from the best GTM operators.
          </p>
          <span class="card-link">
            Read archives
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7" />
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>
</LandingLayout>

<style>
  /* ===== HERO SECTION ===== */
  .hero {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 16px var(--content-padding) 0;
  }

  .hero-container {
    max-width: 900px;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 24px;
    align-items: center;
  }

  .hero-content {
    max-width: 520px;
  }

  .hero-mascot {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mascot-image {
    max-width: 320px;
    width: 100%;
    height: auto;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 600;
    line-height: 1.15;
    letter-spacing: -0.03em;
    color: var(--color-text);
    margin: 0 0 16px;
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text-muted);
    margin: 0 0 24px;
  }

  .hero-form {
    max-width: 440px;
    margin: 0 0 12px;
  }

  .form-row {
    display: flex;
    gap: 0;
  }

  .hero-input {
    flex: 1;
    padding: 14px 16px;
    border: 1px solid var(--color-border);
    background-color: var(--color-background-secondary);
    color: var(--color-text);
    font-size: 15px;
    outline: none;
    transition: border-color 0.2s ease;
    border-radius: 8px 0 0 8px;
  }

  .hero-input::placeholder {
    color: var(--color-text-muted);
  }

  .hero-input:focus {
    border-color: var(--color-text);
    background: var(--color-background-tertiary);
  }

  .hero-button {
    padding: 14px 24px;
    background-color: var(--color-text);
    color: var(--color-background);
    border: 1px solid var(--color-text);
    font-size: 15px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    border-radius: 0 8px 8px 0;
  }

  .hero-button:hover {
    background-color: transparent;
    color: var(--color-text);
  }

  .hero-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .newsletter-status {
    margin-top: 12px;
    font-size: 0.875rem;
    min-height: 1.25em;
    text-align: center;
  }

  .newsletter-status.success {
    color: #10B981;
  }

  .newsletter-status.error {
    color: #EF4444;
  }

  .hero-note {
    font-size: 13px;
    color: var(--color-text-light);
    margin: 0;
  }

  /* ===== EXPLORE SECTION ===== */
  .explore {
    padding: 0 var(--content-padding) 100px;
    margin-top: 8px;
  }

  .explore-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .card {
    display: flex;
    flex-direction: column;
    padding: 24px;
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .card:hover {
    border-color: var(--color-border-hover);
  }

  .card-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
  }

  .card-icon svg {
    width: 28px;
    height: 28px;
    color: var(--color-text);
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 8px;
    letter-spacing: -0.02em;
  }

  .card-description {
    font-size: 15px;
    line-height: 1.6;
    color: var(--color-text-muted);
    margin: 0 0 16px;
    flex: 1;
  }

  .card-link {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    font-weight: 500;
    color: var(--color-text);
  }

  .card-link svg {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease;
  }

  .card:hover .card-link svg {
    transform: translateX(4px);
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 968px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: 24px;
      text-align: center;
    }

    .hero-content {
      max-width: 600px;
      margin: 0 auto;
      order: 2;
    }

    .hero-mascot {
      order: 1;
    }

    .mascot-image {
      max-width: 180px;
    }

    .hero-form {
      margin: 0 auto 12px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 32px var(--content-padding) 32px;
    }

    .hero-container {
      gap: 20px;
    }

    .mascot-image {
      max-width: 140px;
    }

    .hero-title {
      font-size: 1.75rem;
    }

    .hero-description {
      font-size: 1rem;
      margin-bottom: 20px;
    }

    .form-row {
      flex-direction: column;
      gap: 12px;
    }

    .hero-input {
      border-radius: 8px;
    }

    .hero-button {
      border-radius: 8px;
    }

    .explore {
      padding: 0 var(--content-padding) 48px;
    }

    .cards-grid {
      grid-template-columns: 1fr;
    }

    .card {
      padding: 20px;
    }
  }
</style>

<script>
  const form = document.getElementById('newsletter-form');
  const emailInput = document.getElementById('newsletter-email') as HTMLInputElement;
  const submitBtn = document.getElementById('newsletter-submit') as HTMLButtonElement;
  const statusEl = document.getElementById('newsletter-status');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = emailInput?.value?.trim();
    if (!email) return;

    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.textContent = 'Subscribing...';
    }
    if (statusEl) {
      statusEl.textContent = '';
      statusEl.className = 'newsletter-status';
    }

    try {
      const response = await fetch('/api/newsletter/subscribe', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email }),
      });

      const data = await response.json();

      if (response.ok) {
        if (statusEl) {
          statusEl.textContent = 'Thanks for subscribing!';
          statusEl.className = 'newsletter-status success';
        }
        if (emailInput) emailInput.value = '';
      } else {
        throw new Error(data.error || 'Failed to subscribe');
      }
    } catch (error) {
      if (statusEl) {
        statusEl.textContent = 'Something went wrong. Please try again.';
        statusEl.className = 'newsletter-status error';
      }
    } finally {
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Subscribe';
      }
    }
  });
</script>
