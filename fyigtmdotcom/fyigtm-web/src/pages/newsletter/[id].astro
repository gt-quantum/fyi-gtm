---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getSupabaseAdmin } from '../../lib/supabase';
import { marked } from 'marked';

export const prerender = false;

const { id } = Astro.params;

// Fetch the newsletter from Supabase
const runtime = (Astro.locals as any).runtime;
const supabase = getSupabaseAdmin(runtime?.env);

const { data: newsletter, error } = await supabase
  .from('newsletter_runs')
  .select('id, run_date, issue_number, newsletter_topics(topic), newsletter_content')
  .eq('id', id)
  .eq('status', 'published')
  .single();

// If newsletter not found, redirect to archive
if (error || !newsletter) {
  return Astro.redirect('/newsletter');
}

// Format the date
const formattedDate = new Date(newsletter.run_date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Build title from issue_number and topic (same logic as API)
const topicName = newsletter.newsletter_topics?.topic;
const issueNum = newsletter.issue_number;

let title: string;
if (issueNum && topicName) {
  title = `FYI GTM #${issueNum}: ${topicName}`;
} else if (issueNum) {
  title = `FYI GTM #${issueNum}: This Week in GTM`;
} else if (topicName) {
  title = topicName;
} else {
  title = 'Newsletter';
}

// Render markdown content
const htmlContent = marked(newsletter.newsletter_content || '');
---

<BaseLayout title={`${title} | FYI GTM Newsletter`}>
  <div class="container">
    <!-- Full Width Layout -->
    <div class="main-layout">
      <!-- Back Button -->
      <a href="/newsletter" class="back-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
          <path d="M19 12H5M12 19l-7-7 7-7" />
        </svg>
        Back to Newsletter
      </a>
      <article class="newsletter-article">
        <!-- Newsletter Header -->
        <header class="newsletter-header">
          <div class="newsletter-meta">
            <span class="newsletter-date">{formattedDate}</span>
          </div>
          <h1 class="newsletter-title">{title}</h1>
        </header>

        <!-- Newsletter Content -->
        <div class="newsletter-content prose" set:html={htmlContent} />
      </article>

      <!-- Newsletter Subscribe CTA -->
      <section class="subscribe-section">
        <div class="subscribe-content">
          <h2 class="subscribe-title">Stay ahead of the curve</h2>
          <p class="subscribe-text">
            Get the latest GTM tools and strategies delivered to your inbox weekly.
          </p>
          <form class="subscribe-form" id="newsletter-form">
            <input
              type="email"
              placeholder="Enter your email"
              class="subscribe-input"
              id="newsletter-email"
              required
            />
            <button type="submit" class="subscribe-button" id="newsletter-submit">
              Subscribe
            </button>
          </form>
          <p class="subscribe-status" id="newsletter-status"></p>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  /* Back Link */
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 24px;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  /* Full Width Layout (no sidebar) - centered */
  .main-layout {
    display: block;
    max-width: 800px;
    margin: 0 auto;
  }

  .newsletter-article {
    background: var(--color-card-bg);
    border: 1px solid var(--color-card-border);
    border-radius: 0;
    padding: 32px;
  }

  .newsletter-header {
    margin-bottom: 32px;
    padding-bottom: 24px;
    border-bottom: 1px solid var(--color-border);
  }

  .newsletter-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    flex-wrap: wrap;
  }

  .newsletter-date {
    font-size: 14px;
    color: var(--color-text-muted);
  }

  .newsletter-title {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    color: var(--color-text);
  }

  .newsletter-content {
    max-width: 100%;
  }

  /* Subscribe CTA Section */
  .subscribe-section {
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border);
    padding: 48px;
    margin-top: 32px;
    text-align: center;
    transition: border-color 0.2s ease;
  }

  .subscribe-section:hover {
    border-color: var(--color-border-hover);
  }

  .subscribe-content {
    max-width: 480px;
    margin: 0 auto;
  }

  .subscribe-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 8px;
    color: var(--color-text);
  }

  .subscribe-text {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin: 0 0 24px;
  }

  .subscribe-form {
    display: flex;
    gap: 0;
  }

  .subscribe-input {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid var(--color-border);
    background-color: var(--color-background);
    color: var(--color-text);
    font-size: 1rem;
    outline: none;
    transition: border-color 0.2s ease;
    border-radius: 0;
    -webkit-appearance: none;
  }

  .subscribe-input::placeholder {
    color: var(--color-text-muted);
  }

  .subscribe-input:focus {
    border-color: var(--color-text);
  }

  .subscribe-button {
    padding: 12px 24px;
    background-color: var(--color-text);
    color: var(--color-background);
    border: 1px solid var(--color-text);
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    border-radius: 0;
    -webkit-appearance: none;
  }

  .subscribe-button:hover {
    background-color: transparent;
    color: var(--color-text);
  }

  .subscribe-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .subscribe-status {
    margin-top: 12px;
    font-size: 0.875rem;
    min-height: 1.25em;
  }

  .subscribe-status.success {
    color: #10B981;
  }

  .subscribe-status.error {
    color: #EF4444;
  }

  @media (max-width: 768px) {
    .newsletter-article {
      padding: 20px;
    }

    .newsletter-title {
      font-size: 1.5rem;
    }

    .subscribe-section {
      padding: 32px 24px;
    }

    .subscribe-form {
      flex-direction: column;
      gap: 12px;
    }

    .subscribe-input,
    .subscribe-button {
      width: 100%;
    }
  }
</style>

<script>
  const form = document.getElementById('newsletter-form');
  const emailInput = document.getElementById('newsletter-email') as HTMLInputElement;
  const submitBtn = document.getElementById('newsletter-submit') as HTMLButtonElement;
  const statusEl = document.getElementById('newsletter-status');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = emailInput?.value?.trim();
    if (!email) return;

    // Update UI for loading state
    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.textContent = 'Subscribing...';
    }
    if (statusEl) {
      statusEl.textContent = '';
      statusEl.className = 'subscribe-status';
    }

    try {
      const response = await fetch('/api/newsletter/subscribe', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email }),
      });

      const data = await response.json();

      if (response.ok) {
        if (statusEl) {
          statusEl.textContent = 'Thanks for subscribing!';
          statusEl.className = 'subscribe-status success';
        }
        if (emailInput) emailInput.value = '';
      } else {
        throw new Error(data.error || 'Failed to subscribe');
      }
    } catch (error) {
      if (statusEl) {
        statusEl.textContent = 'Something went wrong. Please try again.';
        statusEl.className = 'subscribe-status error';
      }
    } finally {
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Subscribe';
      }
    }
  });
</script>
