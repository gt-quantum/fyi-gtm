---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import SortableToolsList from '../../components/tools/SortableToolsList.jsx';
import Sidebar from '../../components/tools/Sidebar.jsx';

export async function getStaticPaths() {
  const categoriesEntries = await getCollection('categories');
  return categoriesEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { category: { ...entry.data, slug: entry.slug } },
  }));
}

const { category } = Astro.props;

// Get all tools
const toolsEntries = await getCollection('tools');
const toolsData = toolsEntries.map(entry => ({ ...entry.data, slug: entry.slug }));

// Filter tools by category (check if category slug is in tool's categories array)
const categoryTools = toolsData.filter(
  tool => tool.categories.includes(category.slug)
);
---

<BaseLayout title={`${category.name} GTM Tools | FYI GTM`}>
  <div class="container">
    <header class="page-header">
      <a href="/" class="back-link">‚Üê Back to Directory</a>
      <h1 class="page-title">{category.name}</h1>
      <p class="page-description">{category.description}</p>
      <div class="page-meta">
        <span class="tool-count">{categoryTools.length} tools</span>
      </div>
    </header>

    <div class="main-layout">
      {categoryTools.length > 0 ? (
        <SortableToolsList client:load tools={categoryTools} defaultSort="upvotes" />
      ) : (
        <div class="empty-state">
          <span class="empty-icon">üîç</span>
          <h2 class="empty-title">No tools in this category yet</h2>
          <p class="empty-text">Check back soon for new additions!</p>
        </div>
      )}

      <div class="sidebar-wrapper">
        <Sidebar client:load tools={toolsData} title="DEALS" />
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .page-header {
    margin-bottom: 32px;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 16px;
    font-size: 0.875rem;
    color: var(--color-primary);
    text-decoration: none;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .page-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 8px;
    color: var(--color-text);
  }

  .page-description {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin: 0 0 12px;
  }

  .page-meta {
    display: flex;
    gap: 16px;
  }

  .tool-count {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    background: var(--color-background-secondary);
    padding: 4px 12px;
    border-radius: 16px;
  }

  /* Main Layout */
  .main-layout {
    display: grid;
    grid-template-columns: 1fr var(--sidebar-width);
    gap: 32px;
    align-items: start;
  }

  .sidebar-wrapper {
  }

  .empty-state {
    text-align: center;
    padding: 64px 24px;
  }

  .empty-icon {
    font-size: 48px;
    display: block;
    margin-bottom: 16px;
  }

  .empty-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 8px;
    color: var(--color-text);
  }

  .empty-text {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (max-width: 968px) {
    .main-layout {
      grid-template-columns: 1fr;
    }

    .sidebar-wrapper {
      margin-top: 32px;
    }
  }
</style>
