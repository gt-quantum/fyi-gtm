---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ToolListItem from '../../components/tools/ToolListItem.jsx';
import UpvoteButton from '../../components/tools/UpvoteButton.jsx';
import { categoryLabels, categoryToGroup, groupLabels } from '../../lib/taxonomy';

// Colors for each group to make categories visually distinct
const groupColors = {
  'data-intelligence': '#8B5CF6',  // Purple
  'marketing': '#EC4899',          // Pink
  'sales': '#3B82F6',              // Blue
  'revenue-operations': '#F59E0B', // Amber
  'customer': '#10B981',           // Green
  'partnerships': '#6366F1',       // Indigo
};

export async function getStaticPaths() {
  const toolsEntries = await getCollection('tools');
  return toolsEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const tool = { ...entry.data, slug: entry.slug };
const { Content } = await entry.render();

// Get all tools for related/featured
const toolsEntries = await getCollection('tools');
const toolsData = toolsEntries.map(entry => ({ ...entry.data, slug: entry.slug }));

// Get related tools (share at least one category)
const relatedTools = toolsData
  .filter(t => t.slug !== tool.slug && t.categories.some(c => tool.categories.includes(c)))
  .slice(0, 5);

// Get featured tools for sidebar
const featuredTools = toolsData.filter(t => t.featured && t.slug !== tool.slug).slice(0, 3);

// Get group from primary category
const group = tool.primaryCategory ? categoryToGroup[tool.primaryCategory] : null;
const groupLabel = group ? groupLabels[group] : null;
const categoryLabel = tool.primaryCategory ? (categoryLabels[tool.primaryCategory] || tool.primaryCategory) : null;
const categoryColor = group ? groupColors[group] : '#6B7280';

// Format date
const dateAdded = new Date(tool.publishedAt).toLocaleDateString('en-US', {
  day: 'numeric',
  month: 'numeric',
  year: 'numeric'
});
---

<BaseLayout title={`${tool.name} - ${tool.description} | FYI GTM`} description={tool.description}>
  <div class="container">
    <!-- Back Button -->
    <a href="/" class="back-link">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
        <path d="M19 12H5M12 19l-7-7 7-7" />
      </svg>
      Back to Directory
    </a>

    <!-- Two Column Layout -->
    <div class="main-layout">
      <!-- Main Content -->
      <div class="main-content">
        <!-- Tool Header -->
        <div class="tool-header">
          <div class="tool-header-left">
            <div class="tool-logo-wrapper">
              {tool.logo ? (
                <img src={tool.logo} alt={`${tool.name} Logo`} class="tool-logo" />
              ) : (
                <div class="tool-logo-placeholder">
                  {tool.name.charAt(0)}
                </div>
              )}
            </div>

            <div class="tool-header-content">
              <h1 class="tool-name">{tool.name}</h1>
              <p class="tool-description">{tool.description}</p>

              <div class="tool-actions">
                <a href={tool.url} target="_blank" rel="noopener noreferrer" class="btn-view-tool">
                  view tool
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="icon">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                    <polyline points="15 3 21 3 21 9" />
                    <line x1="10" y1="14" x2="21" y2="3" />
                  </svg>
                </a>
                <button class="btn-share">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                    <circle cx="18" cy="5" r="3" />
                    <circle cx="6" cy="12" r="3" />
                    <circle cx="18" cy="19" r="3" />
                    <line x1="8.59" y1="13.51" x2="15.42" y2="17.49" />
                    <line x1="15.41" y1="6.51" x2="8.59" y2="10.49" />
                  </svg>
                  Share
                </button>
              </div>
            </div>
          </div>

          <!-- Upvote Button (right side) -->
          <div class="upvote-wrapper">
            <UpvoteButton client:load slug={tool.slug} initialUpvotes={tool.upvotes} variant="detail" />
          </div>
        </div>

        <!-- Tags (Group > Category) -->
        <div class="tool-tags">
          {groupLabel && (
            <span
              class="group-tag"
              style={`background: ${categoryColor}15; color: ${categoryColor}; border-color: ${categoryColor}30;`}
            >
              {groupLabel}
            </span>
          )}
          {categoryLabel && (
            <a
              href={`/categories/${tool.primaryCategory}`}
              class="category-tag"
              style={`background: ${categoryColor}20; color: ${categoryColor}; border-color: ${categoryColor}40;`}
            >
              {categoryLabel}
            </a>
          )}
        </div>

        <!-- Website Screenshot -->
        <div class="screenshot-section">
          <a href={tool.url} target="_blank" rel="noopener noreferrer" class="screenshot-link">
            <img
              src={`https://image.thum.io/get/width/1280/crop/800/${tool.url}`}
              alt={`${tool.name} website screenshot`}
              class="screenshot-image"
              loading="lazy"
            />
            <div class="screenshot-overlay">
              <span>Visit {tool.name}</span>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                <polyline points="15 3 21 3 21 9" />
                <line x1="10" y1="14" x2="21" y2="3" />
              </svg>
            </div>
          </a>
        </div>

        <!-- Content Tabs -->
        <div class="content-tabs">
          <button class="tab active" data-tab="about">About</button>
          <button class="tab" data-tab="alternatives">Alternatives</button>
        </div>

        <!-- Tab Content -->
        <div class="tab-content">
          <!-- About Tab -->
          <div class="tab-panel active" id="about-panel">
            <div class="tool-content prose">
              <Content />
            </div>
          </div>

          <!-- Alternatives Tab -->
          <div class="tab-panel" id="alternatives-panel">
            {relatedTools.length > 0 ? (
              <div class="alternatives-list">
                <h2 class="section-title">Similar tools to {tool.name}</h2>
                <div class="tools-list">
                  {relatedTools.map((relatedTool, index) => (
                    <ToolListItem client:load tool={relatedTool} index={index} />
                  ))}
                </div>
              </div>
            ) : (
              <p class="empty-text">No alternatives found in this category yet.</p>
            )}
          </div>
        </div>

        <!-- Footer Info -->
        <div class="listing-footer">
          <a href="/claim" class="claim-link">claim listing</a>
          <span class="date-added">{dateAdded}</span>
        </div>
      </div>

      <!-- Sidebar -->
      <aside class="sidebar-wrapper">
        <!-- Related Tools -->
        {relatedTools.length > 0 && (
          <div class="sidebar-section">
            <h3 class="sidebar-title">Related Tools</h3>
            <div class="sidebar-items">
              {relatedTools.map((relatedTool) => (
                <a href={`/tools/${relatedTool.slug}`} class="sidebar-item">
                  <div class="sidebar-item-icon">
                    {relatedTool.logo ? (
                      <img src={relatedTool.logo} alt={relatedTool.name} loading="lazy" />
                    ) : (
                      <div class="sidebar-icon-placeholder">
                        {relatedTool.name.charAt(0)}
                      </div>
                    )}
                  </div>
                  <div class="sidebar-item-content">
                    <span class="sidebar-item-name">{relatedTool.name}</span>
                    <span class="sidebar-item-desc">{relatedTool.description}</span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}

        <!-- Featured -->
        {featuredTools.length > 0 && (
          <div class="sidebar-section">
            <h3 class="sidebar-title">Featured</h3>
            <div class="sidebar-items">
              {featuredTools.map((featuredTool) => (
                <a href={`/tools/${featuredTool.slug}`} class="sidebar-item">
                  <div class="sidebar-item-icon">
                    {featuredTool.logo ? (
                      <img src={featuredTool.logo} alt={featuredTool.name} loading="lazy" />
                    ) : (
                      <div class="sidebar-icon-placeholder">
                        {featuredTool.name.charAt(0)}
                      </div>
                    )}
                  </div>
                  <div class="sidebar-item-content">
                    <span class="sidebar-item-name">{featuredTool.name}</span>
                    <span class="sidebar-item-desc">{featuredTool.description}</span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}
      </aside>
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  /* Back Link */
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 24px;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  /* Tool Header */
  .tool-header {
    display: flex;
    gap: 24px;
    margin: 0 0 24px 0;
    padding: 0;
    align-items: flex-start;
    justify-content: space-between;
  }

  .tool-header-left {
    display: flex;
    gap: 24px;
    flex: 1;
  }

  .tool-logo-wrapper {
    width: 100px;
    height: 100px;
    border-radius: 0;
    overflow: hidden;
    flex-shrink: 0;
    background: var(--color-background-secondary);
  }

  .tool-logo {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .tool-logo-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    color: white;
    font-size: 40px;
    font-weight: 700;
  }

  .tool-header-content {
    flex: 1;
  }

  /* Upvote Button (right side) */
  .upvote-wrapper {
    flex-shrink: 0;
  }

  .upvote-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    padding: 12px 18px;
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
    min-width: 60px;
  }

  .upvote-btn:hover {
    background: var(--color-text);
    border-color: var(--color-text);
  }

  .upvote-btn:hover svg,
  .upvote-btn:hover .upvote-count {
    color: var(--color-background);
  }

  .upvote-btn svg {
    color: var(--color-text-muted);
    transition: color 0.2s;
  }

  .upvote-count {
    font-size: 14px;
    font-weight: 600;
    color: var(--color-text);
    transition: color 0.2s;
  }

  .tool-name {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 4px;
    color: var(--color-text);
  }

  .tool-tagline {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin: 0 0 8px;
  }

  .tool-description {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin: 0 0 16px;
    line-height: 1.6;
  }

  .tool-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .btn-view-tool {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: var(--color-text);
    color: var(--color-background);
    border-radius: 0;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
    border: 1px solid var(--color-text);
  }

  .btn-view-tool:hover {
    background: transparent;
    color: var(--color-text);
  }

  .btn-view-tool .icon {
    width: 16px;
    height: 16px;
  }

  .btn-share {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0;
    color: var(--color-text);
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-share:hover {
    background: var(--color-background-tertiary);
  }

  /* Two Column Layout */
  .main-layout {
    display: grid;
    grid-template-columns: 1fr var(--sidebar-width);
    gap: 32px;
    align-items: start;
  }

  .main-content {
    min-width: 0;
    padding-top: 0;
    margin-top: 0;
  }

  .main-content > *:first-child {
    margin-top: 0;
    padding-top: 0;
  }

  .sidebar-wrapper > *:first-child {
    margin-top: 0;
  }

  /* Screenshot */
  .screenshot-section {
    margin-bottom: 24px;
  }

  .screenshot-link {
    display: block;
    position: relative;
    border-radius: 0;
    overflow: hidden;
    border: 1px solid var(--color-border);
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .screenshot-link:hover {
    border-color: var(--color-primary);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .screenshot-image {
    width: 100%;
    height: auto;
    display: block;
    background: var(--color-background-secondary);
  }

  .screenshot-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    opacity: 0;
    transition: opacity 0.2s ease;
    color: white;
    font-size: 14px;
    font-weight: 500;
  }

  .screenshot-link:hover .screenshot-overlay {
    opacity: 1;
  }

  /* Tags */
  .tool-tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    align-items: center;
    margin-bottom: 24px;
  }

  .group-tag {
    display: inline-flex;
    align-items: center;
    padding: 5px 12px;
    font-size: 13px;
    font-weight: 500;
    border-radius: 6px;
    border: 1px solid;
  }

  .category-tag {
    display: inline-flex;
    align-items: center;
    padding: 5px 12px;
    font-size: 13px;
    font-weight: 600;
    border-radius: 6px;
    border: 1px solid;
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .category-tag:hover {
    filter: brightness(0.9);
  }

  /* Tabs */
  .content-tabs {
    display: flex;
    gap: 4px;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 24px;
  }

  .tab {
    padding: 12px 20px;
    background: none;
    border: none;
    border-bottom: 2px solid transparent;
    color: var(--color-text-muted);
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .tab:hover {
    color: var(--color-text);
  }

  .tab.active {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
  }

  /* Tab Content */
  .tab-panel {
    display: none;
  }

  .tab-panel.active {
    display: block;
  }

  /* Prose content container - styles moved to global.css for Content component */
  .tool-content {
    max-width: 100%;
  }

  /* Alternatives */
  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 16px;
  }

  .tools-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .empty-text {
    color: var(--color-text-muted);
  }

  /* Listing Footer */
  .listing-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 0;
    border-top: 1px solid var(--color-border);
    margin-top: 32px;
  }

  .claim-link {
    font-size: 13px;
    color: var(--color-primary);
    text-decoration: none;
  }

  .claim-link:hover {
    text-decoration: underline;
  }

  .date-added {
    font-size: 13px;
    color: var(--color-text-muted);
  }

  /* Sidebar */
  .sidebar-wrapper {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .sidebar-section {
    background: var(--color-card-bg);
    border: 1px solid var(--color-card-border);
    border-radius: 12px;
    padding: 16px;
  }

  .sidebar-title {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--color-text-muted);
    margin: 0 0 12px;
  }

  .sidebar-items {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .sidebar-item {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    padding: 8px;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .sidebar-item:hover {
    background: var(--color-background-tertiary);
  }

  .sidebar-item-icon {
    width: 32px;
    height: 32px;
    border-radius: 6px;
    overflow: hidden;
    flex-shrink: 0;
    background: var(--color-background-secondary);
  }

  .sidebar-item-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .sidebar-icon-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    color: white;
    font-size: 12px;
    font-weight: 700;
  }

  .sidebar-item-content {
    flex: 1;
    min-width: 0;
  }

  .sidebar-item-name {
    display: block;
    font-size: 13px;
    font-weight: 600;
    color: var(--color-text);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 2px;
  }

  .sidebar-item-desc {
    display: block;
    font-size: 11px;
    color: var(--color-text-muted);
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .main-layout {
      grid-template-columns: 1fr;
    }

    .sidebar-wrapper {
      margin-top: 32px;
    }
  }

  @media (max-width: 768px) {
    .tool-header {
      flex-direction: column;
    }

    .tool-header-left {
      flex-direction: column;
      align-items: flex-start;
    }

    .upvote-wrapper {
      align-self: flex-start;
    }

    .tool-logo-wrapper {
      width: 80px;
      height: 80px;
    }

    .tool-name {
      font-size: 1.5rem;
    }

    .tool-actions {
      flex-direction: column;
    }

    .btn-view-tool,
    .btn-share {
      width: 100%;
      justify-content: center;
    }

    .content-tabs {
      overflow-x: auto;
    }
  }
</style>

<script>
  // Tab functionality
  document.querySelectorAll('.tab').forEach(tab => {
    tab.addEventListener('click', () => {
      const tabId = tab.getAttribute('data-tab');

      // Remove active from all tabs and panels
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.tab-panel').forEach(p => p.classList.remove('active'));

      // Add active to clicked tab and corresponding panel
      tab.classList.add('active');
      document.getElementById(`${tabId}-panel`)?.classList.add('active');
    });
  });
</script>
