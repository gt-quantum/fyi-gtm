---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ToolListItem from '../../components/tools/ToolListItem.jsx';

export async function getStaticPaths() {
  const toolsEntries = await getCollection('tools');
  return toolsEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { tool: { ...entry.data, slug: entry.slug } },
  }));
}

const { tool } = Astro.props;

// Get all tools for related/featured
const toolsEntries = await getCollection('tools');
const toolsData = toolsEntries.map(entry => ({ ...entry.data, slug: entry.slug }));

// Get related tools (same category)
const relatedTools = toolsData
  .filter(t => t.category === tool.category && t.slug !== tool.slug)
  .slice(0, 5);

// Get featured tools for sidebar
const featuredTools = toolsData.filter(t => t.featured && t.slug !== tool.slug).slice(0, 3);

const pricingLabels = {
  free: { label: 'Free', color: '#10B981' },
  freemium: { label: 'Freemium', color: '#3B82F6' },
  paid: { label: 'Paid', color: '#8B5CF6' },
  trial: { label: 'Free Trial', color: '#F59E0B' },
};

const pricing = pricingLabels[tool.pricing] || pricingLabels.free;

// Format date
const dateAdded = new Date(tool.dateAdded).toLocaleDateString('en-US', {
  day: 'numeric',
  month: 'numeric',
  year: 'numeric'
});
---

<BaseLayout title={`${tool.name} - ${tool.description} | FYI GTM`} description={tool.description}>
  <div class="container">
    <!-- Back Button -->
    <a href="/" class="back-link">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
        <path d="M19 12H5M12 19l-7-7 7-7" />
      </svg>
      Back to Directory
    </a>

    <!-- Two Column Layout -->
    <div class="main-layout">
      <!-- Main Content -->
      <div class="main-content">
        <!-- Tool Header -->
        <div class="tool-header">
          <div class="tool-header-left">
            <div class="tool-logo-wrapper">
              {tool.logo ? (
                <img src={tool.logo} alt={`${tool.name} Logo`} class="tool-logo" />
              ) : (
                <div class="tool-logo-placeholder">
                  {tool.name.charAt(0)}
                </div>
              )}
            </div>

            <div class="tool-header-content">
              <h1 class="tool-name">{tool.name}</h1>
              <p class="tool-tagline">{tool.description.split('.')[0]}</p>
              <p class="tool-description">{tool.longDescription || tool.description}</p>

              <div class="tool-actions">
                <a href={tool.url} target="_blank" rel="noopener noreferrer" class="btn-view-tool">
                  view tool
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="icon">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                    <polyline points="15 3 21 3 21 9" />
                    <line x1="10" y1="14" x2="21" y2="3" />
                  </svg>
                </a>
                <button class="btn-share">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                    <circle cx="18" cy="5" r="3" />
                    <circle cx="6" cy="12" r="3" />
                    <circle cx="18" cy="19" r="3" />
                    <line x1="8.59" y1="13.51" x2="15.42" y2="17.49" />
                    <line x1="15.41" y1="6.51" x2="8.59" y2="10.49" />
                  </svg>
                  Share
                </button>
              </div>
            </div>
          </div>

          <!-- Upvote Button (right side) -->
          <div class="upvote-wrapper">
            <button class="upvote-btn">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" fill="currentColor" width="14" height="14">
                <path d="M236.78 211.81A24.34 24.34 0 0 1 215.45 224H40.55a24.34 24.34 0 0 1-21.33-12.19a23.51 23.51 0 0 1 0-23.72l87.43-151.87a24.76 24.76 0 0 1 42.7 0l87.45 151.87a23.51 23.51 0 0 1-.02 23.72Z" />
              </svg>
              <span class="upvote-count">{tool.upvotes.toLocaleString()}</span>
            </button>
          </div>
        </div>
        <!-- Screenshot Placeholder -->
        <div class="screenshot-section">
          <div class="screenshot-placeholder">
            <span class="screenshot-text">{tool.name} Website Screenshot</span>
          </div>
        </div>

        <!-- Tags -->
        <div class="tool-tags">
          <span class="pricing-tag" style={`background: ${pricing.color}20; color: ${pricing.color};`}>
            {pricing.label}
          </span>
          <a href={`/categories/${tool.category.toLowerCase().replace(/\s+/g, '-')}`} class="category-tag">
            {tool.category}
          </a>
          {tool.tags.slice(0, 3).map(tag => (
            <span class="category-tag">{tag}</span>
          ))}
        </div>

        <!-- Content Tabs -->
        <div class="content-tabs">
          <button class="tab active" data-tab="about">About</button>
          <button class="tab" data-tab="alternatives">Alternatives</button>
        </div>

        <!-- Tab Content -->
        <div class="tab-content">
          <!-- About Tab -->
          <div class="tab-panel active" id="about-panel">
            <p class="intro-line">{tool.description}</p>

            <div class="faq-section">
              <h2 class="faq-title">What is {tool.name}?</h2>
              <p class="faq-content">
                {tool.name} is a powerful AI tool in the {tool.category} category. {tool.longDescription || tool.description} The platform provides users with innovative features to enhance their productivity and creative workflows.
              </p>
            </div>

            <div class="faq-section">
              <h2 class="faq-title">How does {tool.name} work?</h2>
              <p class="faq-content">
                {tool.name} utilizes advanced artificial intelligence models to provide its services. Users can access the platform through their web browser and begin using the AI-powered features immediately. The tool offers both free and premium tiers to accommodate different user needs and budgets.
              </p>
            </div>

            {tool.pricing === 'freemium' || tool.pricing === 'paid' ? (
              <div class="faq-section">
                <h2 class="faq-title">What are the benefits of upgrading to a premium membership of {tool.name}?</h2>
                <p class="faq-content">
                  By upgrading to a premium membership on {tool.name}, users gain access to enhanced features including:
                </p>
                <ul class="faq-list">
                  <li>Access to advanced AI models and capabilities</li>
                  <li>Faster processing speeds and priority support</li>
                  <li>Higher usage limits and extended features</li>
                  <li>Commercial use rights for generated content</li>
                  <li>Priority access to new features and updates</li>
                </ul>
                {tool.priceNote && <p class="faq-content"><strong>Pricing:</strong> {tool.priceNote}</p>}
              </div>
            ) : null}

            <div class="faq-section">
              <h2 class="faq-title">What are the benefits of {tool.name}?</h2>
              <p class="faq-content">
                {tool.name} offers several notable benefits for its users:
              </p>
              <ul class="faq-list">
                <li>Easy-to-use interface designed for both beginners and professionals</li>
                <li>Powered by cutting-edge AI technology</li>
                <li>Regular updates with new features and improvements</li>
                <li>Active community and support resources</li>
                <li>Integration capabilities with other tools and workflows</li>
              </ul>
            </div>

            <div class="faq-section">
              <h2 class="faq-title">What are the limitations of {tool.name}?</h2>
              <p class="faq-content">
                While {tool.name} offers valuable features, users should be aware of certain limitations:
              </p>
              <ul class="faq-list">
                <li>Some advanced features may require a premium subscription</li>
                <li>Results quality depends on input quality and specificity</li>
                <li>Internet connection required for cloud-based features</li>
                <li>Usage limits may apply depending on the subscription tier</li>
              </ul>
            </div>
          </div>

          <!-- Alternatives Tab -->
          <div class="tab-panel" id="alternatives-panel">
            {relatedTools.length > 0 ? (
              <div class="alternatives-list">
                <h2 class="section-title">Similar tools to {tool.name}</h2>
                <div class="tools-list">
                  {relatedTools.map((relatedTool, index) => (
                    <ToolListItem client:load tool={relatedTool} index={index} />
                  ))}
                </div>
              </div>
            ) : (
              <p class="empty-text">No alternatives found in this category yet.</p>
            )}
          </div>
        </div>

        <!-- Footer Info -->
        <div class="listing-footer">
          <a href="/claim" class="claim-link">claim listing</a>
          <span class="date-added">{dateAdded}</span>
        </div>
      </div>

      <!-- Sidebar -->
      <aside class="sidebar-wrapper">
        <!-- Related Tools -->
        {relatedTools.length > 0 && (
          <div class="sidebar-section">
            <h3 class="sidebar-title">Related Tools</h3>
            <div class="sidebar-items">
              {relatedTools.map((relatedTool) => (
                <a href={`/tools/${relatedTool.slug}`} class="sidebar-item">
                  <div class="sidebar-item-icon">
                    {relatedTool.logo ? (
                      <img src={relatedTool.logo} alt={relatedTool.name} loading="lazy" />
                    ) : (
                      <div class="sidebar-icon-placeholder">
                        {relatedTool.name.charAt(0)}
                      </div>
                    )}
                  </div>
                  <div class="sidebar-item-content">
                    <span class="sidebar-item-name">{relatedTool.name}</span>
                    <span class="sidebar-item-desc">{relatedTool.description}</span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}

        <!-- Featured -->
        {featuredTools.length > 0 && (
          <div class="sidebar-section">
            <h3 class="sidebar-title">Featured</h3>
            <div class="sidebar-items">
              {featuredTools.map((featuredTool) => (
                <a href={`/tools/${featuredTool.slug}`} class="sidebar-item">
                  <div class="sidebar-item-icon">
                    {featuredTool.logo ? (
                      <img src={featuredTool.logo} alt={featuredTool.name} loading="lazy" />
                    ) : (
                      <div class="sidebar-icon-placeholder">
                        {featuredTool.name.charAt(0)}
                      </div>
                    )}
                  </div>
                  <div class="sidebar-item-content">
                    <span class="sidebar-item-name">{featuredTool.name}</span>
                    <span class="sidebar-item-desc">{featuredTool.description}</span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}
      </aside>
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  /* Back Link */
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 24px;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  /* Tool Header */
  .tool-header {
    display: flex;
    gap: 24px;
    margin: 0 0 24px 0;
    padding: 0;
    align-items: flex-start;
    justify-content: space-between;
  }

  .tool-header-left {
    display: flex;
    gap: 24px;
    flex: 1;
  }

  .tool-logo-wrapper {
    width: 100px;
    height: 100px;
    border-radius: 20px;
    overflow: hidden;
    flex-shrink: 0;
    background: var(--color-background-secondary);
  }

  .tool-logo {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .tool-logo-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    color: white;
    font-size: 40px;
    font-weight: 700;
  }

  .tool-header-content {
    flex: 1;
  }

  /* Upvote Button (right side) */
  .upvote-wrapper {
    flex-shrink: 0;
  }

  .upvote-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    padding: 12px 18px;
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
    min-width: 60px;
  }

  .upvote-btn:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
  }

  .upvote-btn:hover svg,
  .upvote-btn:hover .upvote-count {
    color: white;
  }

  .upvote-btn svg {
    color: var(--color-text-muted);
    transition: color 0.2s;
  }

  .upvote-count {
    font-size: 14px;
    font-weight: 600;
    color: var(--color-text);
    transition: color 0.2s;
  }

  .tool-name {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 4px;
    color: var(--color-text);
  }

  .tool-tagline {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin: 0 0 8px;
  }

  .tool-description {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin: 0 0 16px;
    line-height: 1.6;
  }

  .tool-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .btn-view-tool {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: var(--color-primary);
    color: white;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .btn-view-tool:hover {
    opacity: 0.9;
  }

  .btn-view-tool .icon {
    width: 16px;
    height: 16px;
  }

  .btn-share {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text);
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-share:hover {
    background: var(--color-background-tertiary);
  }

  /* Two Column Layout */
  .main-layout {
    display: grid;
    grid-template-columns: 1fr var(--sidebar-width);
    gap: 32px;
    align-items: start;
  }

  .main-content {
    min-width: 0;
    padding-top: 0;
    margin-top: 0;
  }

  .main-content > *:first-child {
    margin-top: 0;
    padding-top: 0;
  }

  .sidebar-wrapper > *:first-child {
    margin-top: 0;
  }

  /* Screenshot */
  .screenshot-section {
    margin-bottom: 24px;
  }

  .screenshot-placeholder {
    width: 100%;
    aspect-ratio: 16/9;
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .screenshot-text {
    color: var(--color-text-muted);
    font-size: 14px;
  }

  /* Tags */
  .tool-tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    margin-bottom: 24px;
  }

  .pricing-tag {
    padding: 6px 14px;
    font-size: 13px;
    font-weight: 500;
    border-radius: 6px;
  }

  .category-tag {
    padding: 6px 14px;
    font-size: 13px;
    background: var(--color-background-secondary);
    color: var(--color-text-muted);
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .category-tag:hover {
    color: var(--color-primary);
  }

  /* Tabs */
  .content-tabs {
    display: flex;
    gap: 4px;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 24px;
  }

  .tab {
    padding: 12px 20px;
    background: none;
    border: none;
    border-bottom: 2px solid transparent;
    color: var(--color-text-muted);
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .tab:hover {
    color: var(--color-text);
  }

  .tab.active {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
  }

  /* Tab Content */
  .tab-panel {
    display: none;
  }

  .tab-panel.active {
    display: block;
  }

  .intro-line {
    font-size: 1.1rem;
    color: var(--color-text);
    margin: 0 0 32px;
    font-weight: 500;
  }

  .faq-section {
    margin-bottom: 32px;
  }

  .faq-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 12px;
  }

  .faq-content {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0 0 12px;
  }

  .faq-list {
    margin: 12px 0;
    padding-left: 24px;
  }

  .faq-list li {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: 8px;
  }

  /* Alternatives */
  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 16px;
  }

  .tools-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .empty-text {
    color: var(--color-text-muted);
  }

  /* Listing Footer */
  .listing-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 0;
    border-top: 1px solid var(--color-border);
    margin-top: 32px;
  }

  .claim-link {
    font-size: 13px;
    color: var(--color-primary);
    text-decoration: none;
  }

  .claim-link:hover {
    text-decoration: underline;
  }

  .date-added {
    font-size: 13px;
    color: var(--color-text-muted);
  }

  /* Sidebar */
  .sidebar-wrapper {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .sidebar-section {
    background: var(--color-card-bg);
    border: 1px solid var(--color-card-border);
    border-radius: 12px;
    padding: 16px;
  }

  .sidebar-title {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--color-text-muted);
    margin: 0 0 12px;
  }

  .sidebar-items {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .sidebar-item {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    padding: 8px;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .sidebar-item:hover {
    background: var(--color-background-tertiary);
  }

  .sidebar-item-icon {
    width: 32px;
    height: 32px;
    border-radius: 6px;
    overflow: hidden;
    flex-shrink: 0;
    background: var(--color-background-secondary);
  }

  .sidebar-item-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .sidebar-icon-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    color: white;
    font-size: 12px;
    font-weight: 700;
  }

  .sidebar-item-content {
    flex: 1;
    min-width: 0;
  }

  .sidebar-item-name {
    display: block;
    font-size: 13px;
    font-weight: 600;
    color: var(--color-text);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 2px;
  }

  .sidebar-item-desc {
    display: block;
    font-size: 11px;
    color: var(--color-text-muted);
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .main-layout {
      grid-template-columns: 1fr;
    }

    .sidebar-wrapper {
      margin-top: 32px;
    }
  }

  @media (max-width: 768px) {
    .tool-header {
      flex-direction: column;
    }

    .tool-header-left {
      flex-direction: column;
      align-items: flex-start;
    }

    .upvote-wrapper {
      align-self: flex-start;
    }

    .tool-logo-wrapper {
      width: 80px;
      height: 80px;
    }

    .tool-name {
      font-size: 1.5rem;
    }

    .tool-actions {
      flex-direction: column;
    }

    .btn-view-tool,
    .btn-share {
      width: 100%;
      justify-content: center;
    }

    .content-tabs {
      overflow-x: auto;
    }
  }
</style>

<script>
  // Tab functionality
  document.querySelectorAll('.tab').forEach(tab => {
    tab.addEventListener('click', () => {
      const tabId = tab.getAttribute('data-tab');

      // Remove active from all tabs and panels
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.tab-panel').forEach(p => p.classList.remove('active'));

      // Add active to clicked tab and corresponding panel
      tab.classList.add('active');
      document.getElementById(`${tabId}-panel`)?.classList.add('active');
    });
  });
</script>
